{
  "name": "anotherGod",
  "version": "0.5.1",
  "description": "Another Gmail on the Dock",
  "main": "main.js",
  "author": "Walter Tosolini<software@tosolini.info>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "electron .",
    "mac": "electron-builder -m",
    "win": "electron-builder -w",
    "lin": "electron-builder -l",
    "build": "electron-builder -mwl",
    "make-cert": "electron-builder create-self-signed-cert -p tosolini",
    "publish": "electron-builder build -mwl -p onTagOrDraft",
    "publish-mac": "electron-builder build -m -p onTagOrDraft",
    "publish-win": "electron-builder build -w -p onTagOrDraft",
    "publish-lin": "electron-builder build -l -p onTagOrDraft"
  },
  "build": {
    "appId": "info.tosolini.anotherGod",
    "directories": {
      "buildResources": "."
    },
    "publish": [
      {
        "provider": "github",
        "owner": "tosolini",
        "repo": "anotherGod"
      }
    ],
    "mac": {
      "publish": [
        "github"
      ],
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "publish": [
        "github"
      ],
      "certificateFile": "private/anotherGod.p12",
      "verifyUpdateCodeSignature": false,
      "publisherName": "Walter Tosolini"
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Network"
    }
  },
  "repository": "https://github.com/tosolini/anotherGod",
  "keywords": [
    "gmail",
    "e-mail",
    "mail"
  ],
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-builder": "^20.27.1"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "ajv-keywords": "^3.2.0",
    "auto-launch": "^5.0.5",
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^3.1.1",
    "electron-window-state": "^4.1.1",
    "gmail-js": "^0.7.7",
    "jquery": "^3.3.1"
  }
}
